void act(){//Finished
	cout<<"Please input activation code:";
	cin>>user_act;
	for(int i = 0;i <= sizeof(act_code);i++){
		if(user_act == act_code[i]){
			act_state = 1;
			break;
		}
	}
	loading(".",3,5,350);
